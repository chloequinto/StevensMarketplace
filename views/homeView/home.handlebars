    <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom box-shadow">
    <h5 class="my-0 mr-md-auto font-weight-normal">Stevens Marketplace</h5>

    <nav class="my-2 my-md-0 mr-md-3">
        <a class="p-2 text-dark" href="/home">Home</a>
        <a class="p-2 text-dark" href="/newListing">New Listing</a>
        <a class="p-2 text-dark" href="/cart">Cart</a>
        <div class="dropdown">
            <button class="dropbtn"><img src = "../../public/images/profile icon.jpg"  width="25" height="25" alt ="Profile"></button>
            <div class="dropdown-content">
            <a href="/profile">Your profile</a>
            <a href="/yourListings">Your listings</a>
            </div>
        </div>

    </nav>
    <a class="btn btn-outline-danger" href="/logout">Logout</a>
    
    </div>

<div class="searchBar"> 
    <form method="POST" action="/search"> 
        <input type="text" name="term" id="search" placeholder="Look for a product"/>
        <button type="submit"class="btn btn-danger">Search</button> 
    </form>
</div>

<div class="shuffleMe"> 
    <a href="/home" class="btn btn-danger">Shuffle Items</a> 
</div>
     
<div class="row-fluid"></div>     
    <div class="card-deck">
    {{# each content}}
        <div class="col-sm-4">
        <div class="card-columns-fluid">
            <div class="card">

                <div class="card-body">
                    <h5 class="card-title">{{this.productName}}</h5>

                    <img src={{this.image}} class="card-img" alt="...">
                    <h6 class="card-title pricing-card-title">Price: {{this.price}}</h6>
                    <p class="card-text">{{this.description}}</p>
                    <a href='' onclick="this.href='/listingDetails?id={{this._id}}'" class="btn btn-danger" id="likeID">Buy</a>
                </div>
                <div class="card-footer">
                    <small class="text-muted">{{this.category}}</small>
                </div>
            </div>
        </div>
        </div>
    {{/each}}
    </div>
</div>


