<div class="loginContainer">
  <form method="POST" action="/login" id="user-form">

    
    <input type="text" id="contactInfo" name="contactInfo"  placeholder="Email"><br><br>
    
    
    <input type="password" id="password" name="password" placeholder="Password"><br><br>

  

    <button type="submit" class="submitLoginBtn">Login!</button>
    <br>
    <a href="/createAccount" class="signUpLink">Or Sign Up Here</a>
    <p style="errorMsg">
      {{errorMsg}}
    </p>
  </form>
</div>
