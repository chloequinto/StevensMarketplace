<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom box-shadow">
<h5 class="my-0 mr-md-auto font-weight-normal">Stevens Marketplace</h5>

<nav class="my-2 my-md-0 mr-md-3">
    <a class="p-2 text-dark" href="/home">Home</a>
    <a class="p-2 text-dark" href="/newListing">New Listing</a>
    <a class="p-2 text-dark" href="/cart">Cart</a>
    <div class="dropdown">
        <button class="dropbtn"><img src = "../../public/images/profile icon.jpg"  width="25" height="25" alt ="Profile"></button>
        <div class="dropdown-content">
        <a href="/profile">Your profile</a>
        <a href="/yourListings">Your listings</a>
        </div>
    </div>

</nav>
<a class="btn btn-outline-danger" href="/logout">Logout</a>

</div>
<div class = "sidenav">
<img src = "../../public/images/profile icon.jpg"  width="50" height="50" alt ="Profile">
<p class = "username"> {{user.username}}</p>
<p class = "email"> {{email}}</p>
</div>
<div class = "info">
    <h4> Previously Bought: </h4>
    <div class="row-fluid">  
    <div class="card-deck">
    {{# each history}}
    <div class="col-sm-4">
        <div class="card-columns-fluid">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{this.productName}}</h5>

                    <img src={{this.image}} class="card-img" alt="...">
                    <h6 class="card-title pricing-card-title">Price: {{this.price}}</h6>
                    <p class="card-text">{{this.description}}</p>
                    <a href='' onclick="this.href='/listingDetails?id={{this._id}}'" class="btn btn-danger" id="likeID">Buy Again</a>
                </div>
                <div class="card-footer">
                    <small class="text-muted">{{this.category}}</small>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
    </div>
    </div>

    <h4 class = "fav">Favorite Listings: {{fav}} </h4>

    <div class="row-fluid">  
    <div class="card-deck">
    {{# each favorites}}
    <div class="col-sm-4">
        <div class="card-columns-fluid">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{this.productName}}</h5>

                    <img src={{this.image}} class="card-img" alt="...">
                    <h6 class="card-title pricing-card-title">Price: {{this.price}}</h6>
                    <p class="card-text">{{this.description}}</p>
                    <a href='' onclick="this.href='/listingDetails?id={{this._id}}'" class="btn btn-danger">View</a>
                    <a href='' onclick="removeFavorite('{{this._id}}')" class="btn btn-danger">X</a>
                    <script src="../../public/js/listingDetails.js"></script>
                </div>
                <div class="card-footer">
                    <small class="text-muted">{{this.category}}</small>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
    </div>
    </div>
</div>