<div class="jumbotron">
  <h1 class="display-4">Hello {{user.username}}</h1>
  <p class="lead">You have this in your cart: </p>

<div class="row"> 
    <div class='col-md-4 order-md-2 mb-4'>
      <h4 class="d-flex justify-content-between align-items-center mb-3">
        <span class="text-muted">Your cart</span>
        <span class="badge badge-secondary badge-pill">{{productData.length}}</span>
      </h4>
         <!-- Cart Info --> 
       <ul class="list-group mb-3">
         {{# each productData}}
        <li class="list-group-item d-flex justify-content-between lh-condensed">
          <div>
            <h6 class="my-0">{{this.productName}}</h6>
            <small class="text-muted">{{this.description}}</small>
          </div>
          <span class="text-muted">${{this.price}}</span>
        </li>
        {{/each}}
        <!-- Promo Code --> 
        <li class="list-group-item d-flex justify-content-between bg-light">
          <div class="text-success">
            <h6 class="my-0">Promo code</h6>
            <small>GIVE-US-AN-A+</small>
          </div>
          <span class="text-success">-$5</span>
        </li>
        <!-- Total --> 
        <li class="list-group-item d-flex justify-content-between">
          <span>Total (USD)</span>
          <strong>${{total}}</strong>
        </li>
      </ul>


<div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
  <div class="btn-group mr-2" role="group" aria-label="First group">
    <a href="/home" class="btn btn-danger">Continue Shopping</a> 
  </div>
  <div class="btn-group mr-2" role="group" aria-label="Second group">
    <a href="/checkout" class="btn btn-danger">Proceed to Checkout</a> 

  </div>
</div>
</div>
    